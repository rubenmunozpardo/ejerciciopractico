<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:apikit="http://www.mulesoft.org/schema/mule/mule-apikit"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
      xmlns:http="http://www.mulesoft.org/schema/mule/http"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
        http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
        http://www.mulesoft.org/schema/mule/mule-apikit http://www.mulesoft.org/schema/mule/mule-apikit/current/mule-apikit.xsd
        http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">

    <!-- ==========================================================
         1) PROPERTIES FIRST
    ========================================================== -->
    <configuration-properties file="process.yaml"/>


    <!-- ==========================================================
         2) LISTENER CONFIG (ESTE TE FALTABA)
    ========================================================== -->
    <http:listener-config name="p-test-rmunozpardo-httpListenerConfig">
        <http:listener-connection host="0.0.0.0" port="${api.port}" />
    </http:listener-config>


    <!-- ==========================================================
         3) REQUEST CONFIGS (Process llama a System)
    ========================================================== -->

    <!-- A) CALL PROCESS â†’ (no necesario, pero dejo estructura uniforme) -->
    <http:request-config name="process-request-config">
        <http:request-connection 
            host="localhost"
            port="8083"
            protocol="HTTP" />
    </http:request-config>

    <!-- B) CALL SYSTEM (CORRECTO PARA CLOUDHUB) -->
    <http:request-config name="system-request-config">
        <http:request-connection
            host="${system-api.host}"
            port="${system-api.port}"
            protocol="${system-api.protocol}"/>
    </http:request-config>


    <!-- ==========================================================
         4) APIKIT CONFIG
    ========================================================== -->
    <apikit:config name="p-test-rmunozpardo-config"
                   api="resource::91b7f36d-45ab-4b9f-be63-662e83632310:p-test-rmunozpardo:1.0.0:raml:zip:p-test-rmunozpardo.raml"
                   outboundHeadersMapName="outboundHeaders"
                   httpStatusVarName="httpStatus"/>


    <!-- ==========================================================
         5) MAIN ROUTER FLOW
    ========================================================== -->
    <flow name="p-test-rmunozpardo-main">
        <http:listener config-ref="p-test-rmunozpardo-httpListenerConfig" path="/pro/*">
            <http:response statusCode="#[vars.httpStatus default 200]">
                <http:headers><![CDATA[#[vars.outboundHeaders default {}]]]> </http:headers>
            </http:response>
            <http:error-response statusCode="#[vars.httpStatus default 500]">
                <http:body><![CDATA[#[payload]]]></http:body>
                <http:headers><![CDATA[#[vars.outboundHeaders default {}]]]> </http:headers>
            </http:error-response>
        </http:listener>

        <apikit:router config-ref="p-test-rmunozpardo-config" />

        <!-- error handler uniforme -->
        <error-handler>

            <on-error-propagate type="APIKIT:BAD_REQUEST">
                <ee:transform>
                    <ee:message>
                        <ee:set-payload><![CDATA[
                            %dw 2.0
                            output application/json
                            ---
                            { message: "Bad request" }
                        ]]></ee:set-payload>
                    </ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus">400</ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>

            <on-error-propagate type="APIKIT:NOT_FOUND">
                <ee:transform>
                    <ee:message><![CDATA[
                        %dw 2.0
                        output application/json
                        ---
                        { message: "Resource not found" }
                    ]]></ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus">404</ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>

            <on-error-propagate type="APIKIT:METHOD_NOT_ALLOWED">
                <ee:transform>
                    <ee:message><![CDATA[
                        %dw 2.0
                        output application/json
                        ---
                        { message: "Method not allowed" }
                    ]]></ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus">405</ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>

            <on-error-propagate type="APIKIT:NOT_ACCEPTABLE">
                <ee:transform>
                    <ee:message><![CDATA[
                        %dw 2.0
                        output application/json
                        ---
                        { message: "Not acceptable" }
                    ]]></ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus">406</ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>

            <on-error-propagate type="APIKIT:UNSUPPORTED_MEDIA_TYPE">
                <ee:transform>
                    <ee:message><![CDATA[
                        %dw 2.0
                        output application/json
                        ---
                        { message: "Unsupported media type" }
                    ]]></ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus">415</ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>

            <on-error-propagate type="APIKIT:NOT_IMPLEMENTED">
                <ee:transform>
                    <ee:message><![CDATA[
                        %dw 2.0
                        output application/json
                        ---
                        { message: "Not implemented" }
                    ]]></ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus">501</ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>

        </error-handler>
    </flow>


    <!-- ==========================================================
         6) GET /accounts IMPLEMENTATION
    ========================================================== -->
    <flow name="get:\accounts:p-test-rmunozpardo-config">

        <!-- CALL SYSTEM -->
        <http:request 
            config-ref="system-request-config"
            method="GET"
            path="/sys/accounts"
            doc:name="Call System API"/>

        <!-- TRANSFORM CLEAN -->
        <ee:transform>
            <ee:message>
                <ee:set-payload><![CDATA[
                    %dw 2.0
                    output application/json
                    ---
                    payload
                ]]></ee:set-payload>
            </ee:message>
        </ee:transform>

    </flow>

</mule>